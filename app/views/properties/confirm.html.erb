<h3>以下の内容で、登録する</h3>
<%= form_with(model: @property, local:true) do |form| %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :rent %>
  <%= form.hidden_field :address %>
  <%= form.hidden_field :age %>
  <%= form.hidden_field :note %>
  <p>物件名:<%= @property.name %></p>
  <p>賃料:<%= @property.rent %>円</p>
  <p>住所:<%= @property.address %></p>
  <p>築年数:<%= @property.age %>年</p>
  <p>備考:<%= @property.note %></p>
  <%= form.fields_for :nearest_stations do |station| %>
    <%= station.hidden_field :line %>
    <%= station.hidden_field :station %>
    <%= station.hidden_field :time %>
    <p>路線名:<%= station.object.line %></p>
    <p>駅名:<%= station.object.station %></p>
    <p>徒歩分数:<%= station.object.time %>分</p>
  <% end %>
  <%= form.submit "登録する" %>
  <%= form.submit "戻る", name: 'back' %>
<% end %>
