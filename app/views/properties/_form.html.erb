<%= form_with(model: @property, local: true, url: choose_new_or_edit) do |form| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= @property.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="property_field">
    <%= form.label :物件名 %><br>
    <%= form.text_field :name %><br>
    <%= form.label :賃料 %><br>
    <%= form.text_field :rent %>円<br>
    <%= form.label :住所 %><br>
    <%= form.text_field :address %><br>
    <%= form.label :築年数 %><br>
    <%= form.text_field :age %>年<br>
    <%= form.label :備考 %><br>
    <%= form.text_area :note %>
  </div>
  <%= form.fields_for :nearest_stations do |nearest_station| %>
  <div class="nearest_station_field">
    <%= nearest_station.label :路線名 %><br>
    <%= nearest_station.text_field :line %><br>
    <%= nearest_station.label :駅名 %><br>
    <%= nearest_station.text_field :station %><br>
    <%= nearest_station.label :徒歩分数 %><br>
    <%= nearest_station.text_field :time %>分<br>
  </div>
  <% end %>
  <%= form.submit "登録" %>
<% end %>
